/* Spinning Logo, Back and Front */

.anim #rot_logo {
	-webkit-animation-name: logo_zoom, logo, logo_mini, logo_mini_keep;
	-webkit-animation-duration: .8s,5s,.5s,3600s;
	-webkit-animation-timing-function: linear,linear,linear,linear;
	-webkit-animation-iteration-count: 1,infinite,1,infinite;
	-webkit-animation-delay: 0s,.8s,5s,5.5s;
	-webkit-backface-visibility: hidden;
}

#rot_logo {
	position: fixed;
	top: 60px;
	left: 173px;
	height: 105px;
	width: 105px;
	z-index: 1000;
}

