@-webkit-keyframes logo {
	from { 
		-webkit-transform: scale(3.33);
		top: 200px;
		left: 600px
	}
	50% {
		-webkit-transform: rotateY(-180deg) scale(3.33) ;
		top: 200px;
		left: 600px
	}
	to { 
		-webkit-transform: scale(3.33);
		top: 200px;
		left: 600px
	}
}

@-webkit-keyframes logo_mini {
	from {
		-webkit-transform: scale(3.33);
		top: 200px;
		left: 600px
	}
	to {
		-webkit-transform: scale(1);
		top: 60px;
		left: 173px;
	}
}

@-webkit-keyframes logo_mini_keep {
	from {
		-webkit-transform: scale(1);
		top: 60px;
		left: 173px;
	}
	to {
		-webkit-transform: scale(1);
		top: 60px;
		left: 173px;
	}
}
	

@-webkit-keyframes logo_back {
	from {
		-webkit-transform: rotateY(180deg) scale(3.33);
		opacity: 1.0;
	}
	50% {
		-webkit-transform: rotateY(0deg) scale(3.33);
		opacity: 1.0;
	}
	to {
		-webkit-transform: rotateY(180deg) scale(3.33);
		opacity: 1.0;
	}
}

@-webkit-keyframes logo_zoom {
	from {
		-webkit-transform: rotateY(80deg) scale(10);
		opacity: 1.0;
		top: 200px;
		left: 600px
	}
	to {
		-webkit-transform: scale(3.33) rotateY(0deg);
		opacity: 1.0;
		top: 200px;
		left: 600px
	}
}

@-webkit-keyframes appear {
	from {
		width: 0%;
		visibility: visible;
	}
	to {
		width: 100%;
		visibility: visible;
	}
}

@-webkit-keyframes disappear {
	from {
		width: 100%;
		visibility: visible;
	}
	to {
		width: 0%;
		visibility: visible;
	}
}

@-webkit-keyframes hide {
	from {
		visibility: hidden;
	}
	to {
		visibility: hidden;
	}
}

@-webkit-keyframes hide2 {
	from {
		visibility: hidden;
	}
	to {
		visibility: hidden;
	}
}

@-webkit-keyframes nc_appear {
	from {
		width: 0%;
		visibility: visible;
	}
	to {
		width: 300px;
		visibility: visible;
	}
}

@-webkit-keyframes nc_disappear {
	from {
		width: 300px;
		visibility: visible;
	}
	to {
		width: 0px;
		visibility: visible;
	}
}

@-webkit-keyframes visible {
	from {
		visibility: visible;
	}
	to {
		visibility: visible;
	}
}

@-webkit-keyframes border_rise {
	from {
		top: 200px;
		opacity: 0.0;
	}
	to {
		top: 110px;
		opacity: 0.8;
	}
}

@-webkit-keyframes title_slide {
	from {
		left: 900px;
		opacity: 0.0;
	}
	to {
		left: 285px;
		opacity: 1.0;
	}
}

@-webkit-keyframes footer_rise {
	from {
		bottom: -200px;
		opacity: 0.0;
	}
	to {
		bottom: 10px;
		opacity: 1;
	}
}
